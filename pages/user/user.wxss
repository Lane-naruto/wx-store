/* pages/user/user.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navs{
  display: flex;
  flex-direction: column;
}
.item-head{
  display: flex;
  justify-content: space-between;
  height: 110rpx;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
}
.item-me{
  color: gray;
  font-size: 15px;
  line-height: 110rpx;
  margin-left: 30rpx;
}
.item-img{
  width: 90rpx;
  height: 90rpx;
  margin-top: 15rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.item-nickname{
  font-size: 15px;
  color: #000;
  line-height: 110rpx;
  margin-right: 30rpx;
}
.item-info{
  font-size: 20px;
  line-height: 110rpx;
  margin-left: 30rpx;
}
.navs-detail{
  display: flex;
  flex-direction: column;
  border-top: 25rpx solid #d6cfcf
}
.radio-group{
  margin-top:29rpx;
  margin-right: 30rpx;
}
.confirm{
 background-color: #f44336;
 width: 100%;
 color: #fff;

}
.item-born{
  font-size: 18px;
  color: #ccc;
  line-height: 110rpx;
  margin-right: 30rpx;

}
.born-picker{
  position:fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
 background: rgba(0,0,0,.5)
}
.born-title{
  position: absolute;
  left: 0;
  right:0;
  bottom: 600rpx;
  background: #fff;
  padding:0 40rpx;
  font-size: 32rpx;
  color: #8a8a8a;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: space-between

}
.title-confirm{
  color: lightgreen
}
picker-view{
  width: 100%;
  height: 600rpx;
  position: absolute;
  left: 0;
  right:0;
  bottom:0;
  background: #fff;
  
}
