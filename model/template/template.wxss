/* model/template/template.wxss */
.stepper {  
    width:90px;  
    height: 26px;   
    border: 1rpx solid #818284;  
    border-radius: 3px;  
    margin:0 auto;  
}  
.stepper .sign {  
    width: 24px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
}   
.stepper .number {  
    width: 40px;  
    height: 26px;  
    float: left;  
     margin: 0 auto;   
    text-align: center;  
    font-size: 12px;  
    color: #000000;  
    border-left: 1rpx solid #818284;  
    border-right: 1rpx solid #818284;  
    
}  
.stepper .normal{  
    color: black;  
}    
.stepper .disabled{  
    color: #ccc;  
}  
